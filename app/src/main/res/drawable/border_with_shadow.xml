<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="0dp"/> <!-- No corner radius for shadow -->
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
            <size
                android:width="40dp"
                android:height="40dp"/>
            <gradient
                android:angle="90"
                android:startColor="@android:color/transparent"
                android:endColor="@color/gray"
            android:type="radial"
            android:gradientRadius="20dp"/> <!-- Shadow radius -->
        </shape>
    </item>

    <!-- Border layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="2dp"
            android:color="@color/gray"/> <!-- Border color -->
            <corners android:radius="0dp"/> <!-- No corner radius for border -->
        </shape>
    </item>

</layer-list>
